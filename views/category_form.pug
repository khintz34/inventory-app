extends layout

block content
    div.content-container
      div.home-title-holder
        h1.home-title Soccer Store Inventory App

      h2=title

      form.form-main(method='POST' action='')
        div.form-group
          label(for='name') Category Name:
          input#name.form-control(type='text' placeholder='Category name' name='name' required='true' value=(undefined===category ? '' : category.name) )
          label(for='description') Category Description:
          input#description.form-control(type='text' placeholder='Description' name='description' required='true' value=(undefined===category ? '' : category.description))
        button.btn.btn-primary(type='submit') Submit
      if errors
        ul
          for error in errors
            li!= error.msg
