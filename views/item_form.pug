extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Item:
      input#name.form-control(type='text', placeholder='Item Name' name='name' required='true' value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='category') Category:
      select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
        for category in categories
          if item
            option(value=category._id selected=(category._id.toString()===item.category._id.toString() ? 'selected' : false) ) #{category.name}
          else
            option(value=category._id) #{category.name}
    div.form-group
      label(for='description') description:
      textarea#description.form-control(type='textarea', placeholder='description' name='description' required='true') #{undefined===item ? '' : item.description}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text', placeholder='99.99' name='price' value=(undefined===item ? '' : item.price) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
